<!-- banner -->

<div class="jumbotron jumbotron-fluid" id="banner" style="background-image: url(img/banner-bk.jpg); background-size: cover; background-position: center; position: relative; padding: 5rem 0;">
    <!-- Overlay escuro para melhorar a legibilidade do texto -->
